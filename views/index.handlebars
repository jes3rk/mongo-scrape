<style media="screen">
  body {
    text-align: center;
    max-width: 960px;
    margin: auto;
  }
  .article {
    text-align: left;
    border-bottom: 5px black solid;
    margin-bottom: 10px;
  }
</style>
<h1>The Washington Post Scraper Thingy</h1>
<h2>It works and isn't illegal...</h2>
<div class="posts" style="text-align:left">
  {{#each data}}
    <div class="article">
      <a href={{link}}><h3>{{headline}}</h3></a>
      <h4>By {{author}}</h4>
      <p>{{summary}}</p>
      <form class="" action="/add/{{_id}}" method="post">
        Name:
        <input name="name" type="text">
        Comment:
        <textarea name="comment" rows="2" cols="50"></textarea>
        <input type="submit" value="Submit">
      </form>
      <button type="button" name="comments" class="commentBtn" data-id={{_id}}>Show Comments</button>
      <div id="{{_id}}"class="comments">

      </div>
    </div>
  {{/each}}
</div>
